{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "commonjs",                 
    "lib": ["ES2020", "DOM"],             
    "strict": true,                       
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 
    "moduleResolution": "node",           
    "resolveJsonModule": true,            
    "rootDir": "src",                     
    "outDir": "dist",                     
    "declaration": true,                  
    "sourceMap": true                     
  },
  "include": ["src", "scripts/saveCookies.ts"],
  "exclude": ["node_modules", "dist"]
}
